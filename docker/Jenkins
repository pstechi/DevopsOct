pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('dockerhub-credentials')
        DOCKER_IMAGE_NAME = 'poonamsisodia/imagebuild'
        dockerImageTag = "${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'JenkinsPipeline', url: 'https://github.com/pstechi/DevopsOct.git'
            }
        }

        stage('Check Workspace') {
            steps {
                bat 'dir'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t ${dockerImageTag} -f docker/dockerfile ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    bat "echo %DOCKER_HUB_CREDENTIALS_PSW% | docker login -u %DOCKER_HUB_CREDENTIALS_USR% --password-stdin"
                    bat "docker push ${dockerImageTag}"
                }
            }
        }
    }

    post {
        always {
            bat "docker rmi ${dockerImageTag} || exit 0"
        }
    }
}
