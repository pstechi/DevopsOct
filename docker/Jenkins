pipeline {
    agent any  // Use any available Jenkins agent

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('dockerhub-credentials')  // Docker Hub credentials stored in Jenkins
        DOCKER_IMAGE_NAME = 'poonamsisodia/imagebuild'  // Docker image name with your Docker Hub username
        dockerImageTag = "${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}"  // Define globally for reuse in post steps
    }

    stages {
        stage('Checkout') {  // Stage to fetch the latest source code
            steps {
                git branch: 'main', url: 'https://github.com/pstechi/DevopsOct.git'  // Clone repository from GitHub
            }
        }

        stage('Build Docker Image') {  // Stage to build the Docker image
            steps {
                script {
                    // Build Docker image and specify the correct path to the dockerfile
                    bat "docker build -t ${dockerImageTag} -f ./docker/dockerfile ."  
                }
            }
        }

        stage('Push Docker Image') {  // Stage to push the image to Docker Hub
            steps {
                script {
                    // Push Docker image to Docker Hub
                    bat "echo %DOCKER_HUB_CREDENTIALS_PSW% | docker login -u %DOCKER_HUB_CREDENTIALS_USR% --password-stdin"  
                    bat "docker push ${dockerImageTag}"  // Push the image with the correct tag
                }
            }
        }
    }

    post {
        always {
            // Clean up local Docker images after pushing
            bat "docker rmi ${dockerImageTag} || exit 0"  
        }
    }
}
